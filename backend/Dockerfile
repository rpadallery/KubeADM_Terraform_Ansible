FROM node:latest
WORKDIR /app
COPY . .
ARG AWS_ACCESS_KEY_ID 
ARG AWS_SECRET_ACCESS_KEY 
ARG S3_REGION 
ARG S3_BUCKET
ENV AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
ENV AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
ENV S3_REGION=${S3_REGION}
ENV S3_BUCKET=${S3_BUCKET}
RUN npm install
EXPOSE 3001
CMD ["npm","run","start"]
